<h1>Restaurants</h1>

<h3><%= link_to "Create Restaurant", new_restaurant_path, class: "btn btn-primary" %></h3>


<% @restaurants.each do |restaurant| %>

  <h3>  <%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
  <p> <%= restaurant.category.capitalize %> </p>
  <p> <%= restaurant.address %> </p>
  <p> <%= restaurant.phone_number %> </p>
  <p> <em><%= restaurant.reviews.sample&.content %></em></p>

<% end %>


